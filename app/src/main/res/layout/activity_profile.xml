<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:id="@+id/profile_img"/>
    <TextView
            android:text="성별"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/profile_sex"/>
    <TextView
            android:text="닉네임"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/profile_nickname"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="학교"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profile_school" android:layout_weight="1"/>
        <TextView
                android:text="학과"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profile_major" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="나이"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profile_age" android:layout_weight="1"/>
        <TextView
                android:text="키"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profile_tall" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="평점"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/profile_rating"/>
</LinearLayout>